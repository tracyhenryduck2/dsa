<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CCPGroupListItem">

    <ImageView
        android:id="@+id/contactitem_avatar_iv"
        android:layout_width="@dimen/NormalAvatarSize"
        android:layout_height="@dimen/NormalAvatarSize"
        android:src="@drawable/select_account_photo_four"
        android:background="#d5d5d5" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8.0dip">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/SmallPadding"
            android:layout_marginTop="-1.5dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.henry.ecdemo.ui.chatting.base.EmojiconTextView
                android:id="@+id/contact_name"
                style="@style/CCPFontTitleInList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/NormalTextSize" />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>