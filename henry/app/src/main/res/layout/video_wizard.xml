<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wizard"
    android:orientation="vertical"
    android:padding="10.0dip" >

    <TextView
        android:id="@+id/video_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/start"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:lineSpacingExtra="2dp"
        android:textSize="16sp"
        android:text="@string/str_video_desc"
        android:textColorHint="#ffcccdce" />

    <Button
        android:id="@+id/start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/video_blue_button_selector"
        android:drawableBottom="@drawable/start_experience" />

</RelativeLayout>