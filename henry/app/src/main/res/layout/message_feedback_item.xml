<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CCPGroupListItem">

    <ImageView
        android:id="@+id/groupitem_avatar_iv"
        android:layout_width="@dimen/NormalAvatarSize"
        android:layout_height="@dimen/NormalAvatarSize"
        android:src="@drawable/select_account_photo_four"
        android:background="#d5d5d5" />

    <LinearLayout
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8.0dip">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/SmallPadding"
            android:layout_marginTop="-1.5dip"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/messageAccount"
                style="@style/CCPFontTipInList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|center"
                android:text="account"
                android:textColor="@color/black"
                android:textSize="14.0dip" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/message_state"
        style="@style/CCPFontPreferenceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ccp_green"
         />

</LinearLayout>