<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    style="@style/ChattingUIContent"
    android:layout_below="@+id/chatting_time_tv" >


    <com.henry.ecdemo.ui.chatting.view.CCPMaskLayout
        android:visibility="gone"
        android:id="@+id/chatting_avatar_mask"
        style="@style/ChattingUIAvatarMaskFrom"
        android:focusable="false" >

        <ImageView
            android:id="@+id/chatting_avatar_iv"
            style="@style/ChattingUIAvatarFrom"
            android:contentDescription="@string/avatar_desc"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="0.0dip"
            android:focusable="false" />

    </com.henry.ecdemo.ui.chatting.view.CCPMaskLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/chatting_user_tv"
            style="@style/ChattingUISenderText"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#209e9e9e"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_money_msg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="7dp"
                android:textColor="#3e3e3e"
                android:textSize="12sp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>