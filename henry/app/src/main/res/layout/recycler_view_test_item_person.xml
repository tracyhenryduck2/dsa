<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/recycler_view_test_item_person_view"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:minHeight="100dip"
              android:layout_height="wrap_content"
              android:background="@color/navpage"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_item"
        android:layout_height="wrap_content">





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dip"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recycler_view_test_item_person_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/recycler_view_test_item_person_age_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            />



    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:text="正在直播"
            android:editable="false"
            android:clickable="false"
            android:textSize="12sp"
            android:padding="5dip"
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/tuoyuanhongse"
            android:layout_height="wrap_content"/>






    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_item"
        android:id="@+id/live_list_iv"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content" />






</RelativeLayout>