<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
     >

    <ImageView
        android:layout_width="60dip"
        android:layout_marginTop="20dip"
        android:layout_height="60dip"
        android:layout_alignParentTop="true"
        android:id="@+id/iv"
        android:src="@drawable/def_usericon"
        android:layout_centerHorizontal="true"
         />


    <EditText
        android:layout_width="wrap_content"
        android:layout_below="@+id/iv"
        android:id="@+id/dialog_tv"
        android:text="个人资料"
        android:layout_marginTop="15dip"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/dialog_tv"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/dialog_one"
        android:weightSum="5"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_kick"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dip"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="踢出" />

        <TextView
            android:id="@+id/btn_mute"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dip"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="禁言" />
        <TextView
            android:id="@+id/btn_mute_out"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:padding="3dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消禁言" />
        <TextView
            android:id="@+id/btn_black"
            android:layout_weight="1"
            android:padding="3dip"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="加入黑名单" />
        <TextView
            android:id="@+id/btn_black_out"
            android:layout_weight="1"
            android:clickable="true"
            android:padding="3dip"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="移除黑名单" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_below="@+id/dialog_one"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/btn_add_manager"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="3dip"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="设置为管理员" />

        <TextView
            android:id="@+id/btn_add_member"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="3dip"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置为成员" />


    </LinearLayout>

</RelativeLayout>